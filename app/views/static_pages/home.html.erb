<% provide(:title, 'Home') %>

<div>
    <div class="center" >

    </div>




        <div class="jumbotron" style="background-color: #b3e9ff; border: 2px solid black">

            <% a = @articles.shift %>

            <% location = ''%>
            <% picture = ''%>

            <% if a.location == 'merc'%>
                <% picture = 'sanjose.png' %>
                <% location = 'The Mercury News' %>

        <% end %>
            <% if a.location == 'daily'%>
                <% picture = 'daily.png' %>
                <% location = 'The Stanford Daily' %>

        <% end %>



            <div class="container" style="background-color: white; padding: 10px; border: 2px solid black; border-radius: 5px;">
                <ul class="nav nav-tabs">
                    <li style="font-size: 20px; color: black;"class="active"><a data-toggle="tab" href="#home">Recent Article</a></li>
                    <li style="font-size: 20px; color: black;"><a data-toggle="tab" href="#menu1">Sign up for email updates!</a></li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">

                        <div class="center">
                            <h2 style="color: black">
                                <div class="padded_san"><%= a.title %></div>
                            </h2>
                            <div>
                                By Hannah Knowles on <%= a.published_date.to_date.strftime("%B %d, %Y") %>
                            </div>
                        </div>

                        <hr>
                        <div class="center">
                            <span class="underlined"><%= location %></span>
                        </div>

                        <h4 class="padded_bot"><%= link_to "Read More", a.link, class: 'btn btn-sm btn-info', :target => '_blank' %></h4>

                    </div>

                    <div id="menu1" class="tab-pane fade">
                        <div class="center" style="padding: 30px">
                            <h4 style="color:black">Get email updates when Hannah posts an article!</h4>
                            <%= form_for(@email) do |f| %>
                                <%= f.label :email, style: "color: black; float: left;"%>
                                <%= f.email_field :email, class: 'form-control' %>

                                <%= f.submit "Get updates!", class: "btn btn-primary" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>

            <hr>





            <% @articles.each do |merc| %>
            <% picture = ''%>
            <% location = '' %>
            <% if merc.location == 'merc'%>
                 <% picture = 'sanjose.png' %>
                <% location = 'The Mercury News' %>

        <% end %>
            <% if merc.location == 'daily'%>
                 <% picture = 'daily.png' %>
                <% location = 'The Stanford Daily' %>

        <% end %>

            <%= timeline_container("#{merc.title}", merc.published_date.to_date, picture) do %>
                            <div>
                                By Hannah Knowles on <%= merc.published_date.to_date.strftime("%B %d, %Y") %>
                            </div>
                             <hr>

                              <div class="center">
                                <span class="underlined"><%= location %></span>
                            </div>


                    <h4 class="padded_bot"><%= link_to "Read More", merc.link, class: 'btn btn-sm btn-info', :target => '_blank' %></h4>

                <% end %>

            <% end%>




        </div>

    </div>

